{
  "name": "Kumquat",
  "version": "1.0",
  "description": "auto apply2",
  "permissions": ["contextMenus", "tabs",  "notifications", "storage", "https://*.myworkdayjobs.com/*", "https://boards.greenhouse.io/*", "https://jobs.lever.co/*", "https://*.taleo.net/*"],
  "background": {
    "scripts": ["background.js", "config.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "css": ["style.css"],
      "js": ["content.js", "config.js", "main.js", "workday.js", "greenhouse.js", "taleo.js", "lever.js", "resumePopup.js"]
    }
  ],

  "web_accessible_resources": ["index.html", "*.png", "Roboto-Regular.ttf"],
  
  "manifest_version": 2,
  "icons": { 
    "16": "kumquat.png",
    "48": "kumquat.png",
    "128": "kumquat.png"
  },
  "browser_action": {
      "default_icon": "kumquat.png",
      "default_popup": "index.html"
  }
}
